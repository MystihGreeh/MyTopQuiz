<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColor="#0A0808"
    android:background="#02776C"
    tools:context=".controller.MainActivity">

    <TextView
        android:id="@+id/activity_main_gretting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="#181F3F"
        android:text="Welcome ! What's your name ?"
        />

    <EditText
        android:id="@+id/activity_main_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#181F3F"
        android:hint="Pleas type your name"
        android:textColorHint="#181F3F"
         />

    <Button
        android:id="@+id/activity_main_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:background="#524A5A"
        android:text="Let's Play"

        />


</LinearLayout>